---
// src/layouts/MainLayout.astro
export interface Props {
  title: string;
}

const { title } = Astro.props;

// Importamos el CSS global de forma correcta (método recomendado por Astro)
import '../styles/global.css';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Diario personal del Camino de Santiago Portugués desde Tuy en 6 etapas - Enero 2026" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="google-site-verification" content="hI7BR4K-L5KWjmH2yaouJi0X7xLDEw6xmmhx5j6Ibu8" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <title>{title} | Nuestro Camino de Santiago 2026</title>
    
    <!-- Favicon (cámbialo cuando tengas uno propio) -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
  </head>

  <body>
    <!-- Todo el contenido de las páginas que usen este layout va aquí -->
    <slot />


  </body>
</html>
