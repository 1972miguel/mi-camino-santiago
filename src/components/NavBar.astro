<header class="navbar">
  <div class="container">
    <a href="/main" class="logo">Camino 2026</a>
    <nav>
      <a href="/blog" class="nav-link">Blog</a>
      <a href="/gallery" class="nav-link">Galer√≠a</a>
    </nav>
  </div>
</header>

<style>
  .navbar {
    background: var(--dark-green);
    color: var(--white);
    padding: 1.2rem 0;
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: 0 4px 15px rgba(0,0,0,0.12);
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-size: 2.2rem;
    font-weight: 700;
    color: var(--white);
    text-decoration: none;
  }

  .nav-link {
    color: var(--white);
    margin-left: 3rem;
    font-weight: 600;
    font-size: 1.2rem;
    padding: 0.6rem 1.2rem;
    border-radius: 8px;
    transition: background 0.3s ease;
    text-decoration: none;
  }

  .nav-link:hover {
    background: rgba(255,255,255,0.18);
  }
</style>