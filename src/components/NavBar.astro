---
// src/components/NavBar.astro
---

<header class="navbar">
  <div class="container">
    <a href="/" class="logo">Camino 2026</a>
    <nav>
      <a href="/main" class="nav-link">Ruta</a>
      <a href="/blog" class="nav-link">Blog</a>
      <a href="/gallery" class="nav-link">Galería</a>
      <a href="/vblog" class="nav-link">VBlog</a>
    </nav>
  </div>
</header>

<style>
  .navbar {
    background: var(--dark-green);
    color: var(--white);
    padding: 0.9rem 0;              /* Reducido de 1.4rem → más compacta */
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    box-shadow: 0 4px 15px rgba(0,0,0,0.15);
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-size: 2rem;                /* Reducido de 2.4rem → más equilibrado */
    font-weight: 700;
    color: var(--white);
    text-decoration: none;
  }

  .nav-link {
    color: var(--white);
    margin-left: 2rem;              /* Reducido un poco para que quepa mejor */
    font-weight: 600;
    font-size: 1.1rem;              /* Reducido de 1.2rem → más fino */
    padding: 0.5rem 1rem;
    border-radius: 8px;
    text-decoration: none;
    transition: background 0.3s ease;
  }

  .nav-link:hover {
    background: rgba(255,255,255,0.2);
  }

  /* En móvil: aún más compacto */
  @media (max-width: 768px) {
    .navbar {
      padding: 0.7rem 0;
    }

    .logo {
      font-size: 1.8rem;
    }

    .nav-link {
      margin-left: 1.2rem;
      font-size: 1rem;
      padding: 0.4rem 0.8rem;
    }
  }
</style>