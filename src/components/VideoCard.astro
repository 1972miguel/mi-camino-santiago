<style>
  .video-card {
    background: #fff;
    border-radius: 15px;
    border-left: 6px solid var(--light-green);
    box-shadow: 0 8px 25px rgba(0,0,0,0.08);
    margin: 3rem 0;
    overflow: hidden;
  }
  .video-player {
    width: 100%;
    aspect-ratio: 16 / 9;
