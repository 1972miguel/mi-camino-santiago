---
// src/pages/gallery.astro
import MainLayout from '../layouts/MainLayout.astro';
import NavBar from '../components/NavBar.astro';

// Path correcto relativo desde src/pages/gallery.astro
const modules = import.meta.glob('./blog/*.{md,mdx}', { eager: true });

const posts = Object.values(modules);

const todasLasFotos = posts
  .filter((post: any) => post.frontmatter?.imagenes)
  .flatMap((post: any) => post.frontmatter.imagenes || []);
---

<MainLayout title="Galer√≠a del Camino">
  <NavBar />

  <section class="galeria-container">
    <h1>Galer√≠a del Camino</h1>
    <p class="intro">Momentos capturados por Yaiza y Miguel durante el Camino</p>

    <div class="grid">
      {todasLasFotos.length === 0 ? (
        <p style="grid-column: 1 / -1; text-align: center; font-size: 1.4rem; color: #666;">
          Pronto subiremos las primeras fotos del Camino ü•æüì∏
        </p>
      ) : (
        todasLasFotos.map((foto, index) => (
          <a 
            href={foto.src} 
            class="glightbox gallery-link" 
            data-glightbox={`title: ${foto.alt}; description: ${foto.resena || ''}`}
            style={`animation-delay: ${index * 0.1}s`}
          >
            <img 
              src={foto.src} 
              alt={foto.alt} 
              loading="lazy"
              width="600"
              height="400"
            />
            <div class="overlay-info">
              <span>Ver grande üîç</span>
            </div>
          </a>
        ))
      )}
    </div>
  </section>
</MainLayout>

<script>
  import GLightbox from 'glightbox';
  import 'glightbox/dist/css/glightbox.min.css';

  GLightbox({
    selector: '.glightbox',
    touchNavigation: true,
    loop: true,
    autoplayVideos: true
  });
</script>

<style>
  .galeria-container {
    padding: 8rem 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }

     h1 { 
      text-align: center;
    color: var(--dark-green); 
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: 1rem;
  }
  .intro {
    text-align: center;
    font-size: 1.5rem;
    color: var(--dark-green);
    margin-bottom: 4rem;
    opacity: 0.9;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .gallery-link {
    opacity: 0;
    animation: fadeIn 0.8s ease-out forwards;
    position: relative;
    border-radius: 18px;
    overflow: hidden;
    display: block;
    box-shadow: 0 8px 30px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
  }

  .gallery-link:hover {
    transform: translateY(-10px);
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .gallery-link img {
    width: 100%;
    height: 300px;
    object-fit: cover;
    display: block;
  }

  .overlay-info {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(4,57,21,0.8), transparent);
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding: 2rem;
    color: white;
    font-weight: 600;
    font-size: 1.1rem;
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .gallery-link:hover .overlay-info {
    opacity: 1;
  }

  /* Bot√≥n cerrar GLightbox */
  :global(.gclose) {
    background: var(--dark-green) !important;
    width: 44px !important;
    height: 44px !important;
    border-radius: 50% !important;
    opacity: 0.9 !important;
  }

  :global(.gclose svg path) {
    fill: white !important;
  }
</style>