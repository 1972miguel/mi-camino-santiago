---
// src/pages/main.astro
import MainLayout from '../layouts/MainLayout.astro';
import NavBar from '../components/NavBar.astro';
import Footer from "../components/Footer.astro"
---

<MainLayout title="Diario del Camino">
 <NavBar client:visible />

  <section class="timeline-section">
    <div class="timeline-container">
      <h1>Nuestra ruta en 6 etapas</h1>
      <p class="intro">Del 2 al 7 de enero de 2026 · Tuy → Santiago de Compostela</p>

      <div class="timeline">
        <div class="timeline-item">
          <div class="timeline-marker"></div>
          <div class="timeline-date">2 Ene</div>
          <div class="timeline-content">
            <h3>Etapa 1: Tuy → O Porriño</h3>
            <p>Inicio oficial del Camino Portugués. Salida desde la Catedral de Tuy.</p>
          </div>
        </div>

        <div class="timeline-item">
          <div class="timeline-marker"></div>
          <div class="timeline-date">3 Ene</div>
          <div class="timeline-content">
            <h3>Etapa 2: O Porriño → Redondela</h3>
            <p>Etapa exigente con subidas, pero vistas increíbles de la ría de Vigo.</p>
          </div>
        </div>

        <div class="timeline-item">
          <div class="timeline-marker"></div>
          <div class="timeline-date">4 Ene</div>
          <div class="timeline-content">
            <h3>Etapa 3: Redondela → Pontevedra</h3>
            <p>Puente romano de Pontesampaio y llegada al precioso casco histórico.</p>
          </div>
        </div>

        <div class="timeline-item">
          <div class="timeline-marker"></div>
          <div class="timeline-date">5 Ene</div>
          <div class="timeline-content">
            <h3>Etapa 4: Pontevedra → Caldas de Reis</h3>
            <p>Bosques encantados y relax en las termas al final del día.</p>
          </div>
        </div>

        <div class="timeline-item">
          <div class="timeline-marker"></div>
          <div class="timeline-date">6 Ene</div>
          <div class="timeline-content">
            <h3>Etapa 5: Caldas de Reis → Padrón</h3>
            <p>Campos, aldeas y la leyenda del pedrón donde llegó la barca de Santiago.</p>
          </div>
        </div>

        <div class="timeline-item">
          <div class="timeline-marker"></div>
          <div class="timeline-date">7 Ene</div>
          <div class="timeline-content">
            <h3>Etapa 6: Padrón → Santiago de Compostela</h3>
            <p>¡Llegada emocionante a la Plaza del Obradoiro y abrazo al Santo!</p>
          </div>
        </div>
      </div>
    </div>
  </section>
  <div class="map-container" id="map"></div>

<script>
// @ts-nocheck  // Evita warnings de TypeScript

import L from 'leaflet';

document.addEventListener('DOMContentLoaded', () => {
  const map = L.map('map').setView([42.3, -8.6] as L.LatLngTuple, 9);

  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: '&copy; <a href="https://openstreetmap.org">OpenStreetMap</a> contributors'
  }).addTo(map);

  // Ruta aproximada
  const route: L.LatLngTuple[] = [
    [42.0475, -8.6444],
    [42.1616, -8.6199],
    [42.2836, -8.6093],
    [42.4315, -8.6446],
    [42.6037, -8.6418],
    [42.7386, -8.6604],
    [42.8804, -8.5457]
  ];

  L.polyline(route, { color: '#B0CE88', weight: 6, opacity: 0.8 }).addTo(map);

  // === TUS PUNTOS AQUÍ ===
  const puntos = [
    {
      coords: [42.0475, -8.6444] as L.LatLngTuple, //SALIDA TUY  /////////////////////////
     // icon: '/icons/concha.png',
      title: 'Inicio: Catedral de Tui',
      desc: '2 Ene - Salida oficial',
      foto: '/images/catedral.jpg'
    },
    {
      coords: [42.1616, -8.6199] as L.LatLngTuple,  // PORRIÑO  //////////////////////////////
      //icon: '/icons/concha.png',
      title: 'Etapa 1: O Porriño',
      desc: 'Fin del primer día',
      foto: '/images/porrino-iglesia.avif'
    },
    {
      coords: [42.2836, -8.6093] as L.LatLngTuple, // REDONDELA   //////////////////////////
     // icon: '/icons/concha.png',
      title: 'Etapa 2: Redondela',
      desc: '3 Ene - Vistas increíbles',
      foto: null
    },
    {
      coords: [42.4315, -8.6446] as L.LatLngTuple, //PONTEVEDRA ////////////////////////////
      //icon: '/icons/concha.png',
      title: 'Etapa 3: Pontevedra',
      desc: '4 Ene - Casco histórico',
      foto: null
    },
    {
      coords: [42.6037, -8.6418] as L.LatLngTuple, //CALDAS ///////////////////////////
     // icon: '/icons/concha.png',
      title: 'Etapa 4: Caldas de Reis',
      desc: '5 Ene - Termas',
      foto: null
    },
    {
      coords: [42.7386, -8.6604] as L.LatLngTuple, // PADRON  /////////////////////////////////
      //icon: '/icons/concha.png',
      title: 'Etapa 5: Padrón',
      desc: '6 Ene - Leyenda del pedrón',
      foto: null
    },
    {
      coords: [42.8804, -8.5457] as L.LatLngTuple, //SANTIAGO    //////////////////////////////////
      //icon: '/icons/concha.png',
      title: 'Llegada: Santiago',
      desc: '7 Ene - ¡Obradoiro!',
      foto: null
    }
  ];

  const markers = puntos.map(punto => {
    let customIcon;

    if (punto.icon) {
      customIcon = L.icon({
        iconUrl: punto.icon,
        iconSize: [38, 38],
        iconAnchor: [19, 38],
        popupAnchor: [0, -38]
      });
    }

    const popupContent = punto.foto 
      ? `
        <div style="text-align:center; min-width:220px;"> 
          <strong style="color:#043915;">${punto.title}</strong><br>
          <small>${punto.desc}</small>
          <br><br>
          <img src="${punto.foto}" alt="${punto.title}" style="width:100%; max-width:300px; border-radius:12px;">
        </div>
      `
      : `
        <div style="text-align:center;">
          <strong style="color:#043915;">${punto.title}</strong><br>
          <small>${punto.desc}</small>
        </div>
      `;

    return L.marker(punto.coords, punto.icon ? { icon: customIcon } : {})
      .addTo(map)
      .bindPopup(popupContent);
  });

  const group = L.featureGroup(markers);
  map.fitBounds(group.getBounds().pad(0.2));
});
</script>
<style>
  .map-container {
    height: 500px;
    width: 80%;
    margin: 4rem auto;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0,0,0,0.15);
  }

  @media (max-width: 768px) {
    .map-container {
      height: 400px;
    }
  }
</style>
  <Footer />
</MainLayout>

<style>
  .navbar {
    background: var(--dark-green);
    color: var(--white);
    padding: 1.2rem 0;
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: 0 4px 15px rgba(0,0,0,0.12);
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-size: 2.2rem;
    font-weight: 700;
    color: var(--white);
  }

  .nav-link {
    color: var(--white);
    margin-left: 3rem;
    font-weight: 600;
    font-size: 1.2rem;
    padding: 0.6rem 1.2rem;
    border-radius: 8px;
    transition: background 0.3s ease;
  }

  .nav-link:hover {
    background: rgba(255,255,255,0.18);
  }

  .timeline-section {
    padding: 8rem 0 0;
    background: var(--white);
  }

  .timeline-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .timeline-section h1 {
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .intro {
    text-align: center;
    font-size: 1.6rem;
    color: var(--dark-green);
    margin-bottom: 6rem;
    font-weight: 500;
  }

  .timeline {
    position: relative;
    padding-left: 60px;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 50px;
    top: 0;
    bottom: 0;
    width: 6px;
    background: var(--light-green);
    border-radius: 3px;
  }

  .timeline-item {
    position: relative;
    margin-bottom: 5rem;
    display: flex;
    flex-direction: column;
  }

  .timeline-marker {
    position: absolute;
    left: -60px;
    top: 20px;
    width: 100px;
    height: 100px;
    background: var(--dark-green);
    border-radius: 50%;
    box-shadow: 0 8px 25px rgba(4, 57, 21, 0.35);
    z-index: 10;
  }

  .timeline-date {
    position: absolute;
    left: -60px;
    top: 20px;
    width: 100px;
    height: 100px;
    background: var(--dark-green);
    color: white;
    border-radius: 50%;
    display: grid;
    place-items: center;
    font-weight: 700;
    font-size: 1.6rem;
    box-shadow: 0 8px 25px rgba(4, 57, 21, 0.35);
    z-index: 11;
  }

  .timeline-content {
    background: var(--white);
    padding: 3rem;
    border-radius: 24px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    border-left: 8px solid var(--light-green);
    max-width: 800px;
    margin-left: 60px;
  }

  .timeline-content h3 {
    margin-bottom: 1.5rem;
    font-size: 2rem;
    color: var(--dark-green);
  }

  .timeline-content p {
    font-size: 1.3rem;
    line-height: 1.9;
  }

  h1 { 
    color: var(--dark-green); 
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: 1rem;
  }
  
  /* Alternar lados en escritorio grande */
  @media (min-width: 992px) {
    .timeline {
      padding-left: 0;
    }

    .timeline::before {
      left: 50%;
      margin-left: -3px;
    }

    .timeline-item {
      width: 50%;
      margin-bottom: 8rem;
    }

    .timeline-item:nth-child(odd) {
      align-self: flex-start;
      margin-left: 0;
    }

    .timeline-item:nth-child(even) {
      align-self: flex-end;
      margin-left: 50%;
    }

    .timeline-item:nth-child(odd) .timeline-date,
    .timeline-item:nth-child(odd) .timeline-marker {
      left: auto;
      right: -50px;
    }

    .timeline-item:nth-child(even) .timeline-date,
    .timeline-item:nth-child(even) .timeline-marker {
      left: -50px;
    }

    .timeline-item:nth-child(odd) .timeline-content {
      border-left: none;
      border-right: 8px solid var(--light-green);
      margin-left: 0;
      margin-right: 60px;
    }

    .timeline-item:nth-child(even) .timeline-content {
      border-left: 8px solid var(--light-green);
      border-right: none;
      margin-left: 60px;
      margin-right: 0;
    }
  }

  @media (max-width: 600px) {
    .timeline-container {
      padding: 0 1rem;
    }

    .timeline {
      padding-left: 40px;
    }

    .timeline::before {
      left: 40px;
    }

    .timeline-date, .timeline-marker {
      width: 80px;
      height: 80px;
      left: -40px;
      font-size: 1.3rem;
    }

    .timeline-content {
      padding: 2rem;
      margin-left: 40px;
    }

    .timeline-content h3 {
      font-size: 1.7rem;
    }
  }
</style>