---
// src/pages/vblog.astro
import MainLayout from '../layouts/MainLayout.astro';
import NavBar from '../components/NavBar.astro';

const posts = await Astro.glob('./blog/*.{md,mdx}');

const todosLosVideos = posts
  .filter(post => post.frontmatter.videos)
  .flatMap(post => post.frontmatter.videos);
---

<MainLayout title="VBlog del Camino">
  <NavBar />
  
  <section class="vblog-section">
    <div class="header-vblog">
      <h1>VBlog del Camino</h1>
      <p>(Pequeños clips de nuestra aventura)</p>
    </div>

    <div class="video-grid">
      {todosLosVideos.map((video) => (
        <a href={video.src} class="glightbox-video video-item">
          <div class="play-button-wrapper">
             <div class="play-mini">▶</div>
          </div>
          <div class="video-info-overlay">
            <span class="video-label">{video.titulo}</span>
          </div>
        </a>
      ))}
    </div>
  </section>
</MainLayout>

<script>
  import GLightbox from 'glightbox';
  import 'glightbox/dist/css/glightbox.min.css';

  const lightbox = GLightbox({ 
    selector: '.glightbox-video', 
    closeButton: true,
    autoplayVideos: true 
  });
</script>

<style>
  /* Separación del título con la NavBar */
  .vblog-section { 
    padding: 10rem 2rem 5rem; /* Aumentado a 10rem arriba para evitar que se pegue */
    max-width: 1200px; 
    margin: 0 auto; 
  }

  .header-vblog {
    text-align: center;
    margin-bottom: 4rem;
  }

  h1 { 
    color: var(--dark-green); 
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: 1rem;
  }

  .header-vblog p {
    color: #666;
    font-size: 1.2rem;
  }

  .video-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2.5rem;
  }

  .video-item {
    aspect-ratio: 16 / 9;
    background: #1a1a1a;
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    text-decoration: none;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    border-bottom: 6px solid var(--light-green);
    transition: all 0.3s ease;
  }

  .video-item:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.2);
  }

  .play-mini {
    width: 60px;
    height: 60px;
    background: var(--dark-green);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
    transition: background 0.3s ease;
  }

  .video-item:hover .play-mini {
    background: var(--light-green);
  }

  .video-info-overlay {
    position: absolute;
    bottom: 0;
    width: 100%;
    padding: 1.5rem;
    background: linear-gradient(transparent, rgba(0,0,0,0.8));
    text-align: center;
  }

  .video-label { 
    color: white; 
    font-weight: bold;
    font-size: 1.1rem;
  }


  .play-mini {
    width: 60px;
    height: 60px;
    background: var(--dark-green);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
    position: relative; /* Necesario para el pulso */
    z-index: 2;
    transition: background 0.3s ease, transform 0.3s ease;
    
    /* ACTIVACIÓN DEL PULSO */
    animation: pulse 1s infinite;
  }

  /* Animación del Pulso */
  @keyframes pulse {
    0% {
      box-shadow: 0 0 0 0 rgba(45, 90, 39, 0.7); /* Usando tu color #2d5a27 */
    }
    70% {
      box-shadow: 0 0 0 15px rgba(45, 90, 39, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(45, 90, 39, 0);
    }
  }

  /* Efecto al pasar el ratón */
  .video-item:hover .play-mini {
    background: var(--light-green);
    transform: scale(1.1);
    animation: none; /* El pulso se detiene al hacer hover para dar paso a la escala */
  }
  /* Ajuste para móviles */
  @media (max-width: 600px) {
    .vblog-section { padding-top: 8rem; }
    .video-grid { grid-template-columns: 1fr; }
  }
</style>