---
// src/pages/index.astro
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Nuestro Camino de Santiago">
  <section class="hero">
    <div class="hero-content">
      <h1>El Camino de Santiago.<br><span class="subtitle">Desde Tui en 6 etapas</span></h1>
      <p class="description">
        A partir del 2 de enero de 2026, Yaiza y MIguel emprendemos esta aventura inolvidable. 
        Aquí compartiremos día a día nuestras experiencias, fotos y emociones en las 6 etapas del Camino Portugués.
      </p>
      <a href="/main" class="btn cta-button">Entrar al Diario</a>
    </div>
  </section>
</MainLayout>

<!-- El <style> se mantiene exactamente igual que antes -->
<style>
  .hero {
    min-height: 100vh;
    display: grid;
    place-items: center;
    background: linear-gradient(to bottom, var(--white) 60%, var(--light-green) 100%);
    text-align: center;
    padding: 2rem;
  }

  .hero-content {
    max-width: 800px;
  }

  .subtitle {
    font-size: 0.6em;
    display: block;
    margin-top: 0.5rem;
    color: var(--dark-green);
  }

  .description {
    font-size: clamp(1.2rem, 2vw + 0.8rem, 1.5rem);
    margin: 2rem 0;
    color: var(--text-dark);
    opacity: 0.9;
  }

  .cta-button {
    display: inline-block;
    font-size: clamp(1.3rem, 2vw + 0.8rem, 1.8rem);
    padding: 1.2rem 3rem;
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(4, 57, 21, 0.2);
  }

  .cta-button:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 30px rgba(4, 57, 21, 0.3);
  }
</style>